profiles {

    local {
        executor{
            name = 'local'
        }
    }

    crg {        
        executor{
            name = 'crg'
            queueSize = 300
        }
    }

    bsc {
        executor{
            name = 'ignite'
            queueSize = 1000
        }
    }
}

process{
    container = 'dgarrimar/simreal@sha256:3f5be157b41704d03fe88ea30cf4b33eae2a282d690904c37e06d33773bd207f'
}

docker {
    sudo = false
    fixOwnership = true
    runOptions = '-u $(id -u)'
}

singularity {
    cacheDir = 'singularity'
    autoMounts = true
}
