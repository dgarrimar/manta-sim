profiles {

    local {
        executor{
	        name = 'local'
	}
    }

    cluster {        
	executor{
		name = 'crg'
                queueSize = 500
	}
    }

    bsc {
        executor{
                name = 'ignite'
                queueSize = 2400
        }
    }
}

process{
    container = 'dgarrimar/simreal:r3.5.2'
}

docker {
    sudo = false
    fixOwnership = true
    runOptions = '-u $(id -u)'
}

singularity {
    cacheDir = 'singularity'
    autoMounts = true
}
