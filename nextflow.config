profiles {

    local {
        process{
		executor = 'local'
	}
    }

    cluster {
        process{
		executor = 'sge'
                queueSize = 300
	}
    }

}

process{
    container = 'dgarrimar/simreal:r3.5.2'
}

docker {
    sudo = false
    fixOwnership = true
    runOptions = '-u $(id -u)'
}

singularity {
    cacheDir = 'singularity'
    autoMounts = true
}
