profiles {

    local {
        executor{
            name = 'local'
        }
    }

    crg {        
        executor{
            name = 'crg'
            queueSize = 300
        }
    }

    bsc {
        executor{
            name = 'ignite'
            queueSize = 1000
        }
    }
}

process{
    container = 'dgarrimar/simreal@sha256:34dd9110ed44da04959977c702f1574e0cf24f2030e83f8cdb7126e0f7118aa2'
}

docker {
    sudo = false
    fixOwnership = true
    runOptions = '-u $(id -u)'
}

singularity {
    cacheDir = 'singularity'
    autoMounts = true
}
