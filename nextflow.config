profiles {

    local {
        executor {
            name = 'local'
        }
    }

    crg {
        executor {
            name = 'crg'
            queueSize = 300
        }
    }

    bsc {
        executor {
            name = 'ignite'
            queueSize = 1000
        }
    }
}

docker {
    sudo = false
    fixOwnership = true
    runOptions = '-u $(id -u)'
}

singularity {
    cacheDir = 'singularity'
    autoMounts = true
}

process {
  container = 'dgarrimar/manta-sim0@sha256:dbc524534af6793b3ceebc155617fe4867b35842425bd6ccc1a5964f20888963'
}

